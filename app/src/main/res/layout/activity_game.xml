<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="TEMA"
              android:textSize="20sp"
              android:layout_centerHorizontal="true"
              android:id="@+id/txt_tema"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="LEVEL"
              android:textSize="20sp"
              android:layout_centerHorizontal="true"
              android:id="@+id/txt_level"
              android:layout_below="@+id/txt_tema"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    android:layout_below="@+id/txt_tema">

        <ImageView
                android:layout_width="184dp"
                android:layout_height="178dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/imgHangman" android:layout_marginTop="44dp"
        android:layout_gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtJawaban"
                android:layout_marginTop="52dp"
                android:textSize= "24sp"
                android:textAlignment="center"
                android:letterSpacing="0.9"
                android:layout_gravity="center"
                android:ems="10"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="20dp">
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="A" android:id="@+id/buttonA"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="B" android:id="@+id/buttonB"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="C" android:id="@+id/buttonC"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="D" android:id="@+id/buttonD"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="E" android:id="@+id/buttonE"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="F" android:id="@+id/buttonF"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="G" android:id="@+id/buttonG"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="H" android:id="@+id/buttonH"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="I" android:id="@+id/buttonI"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="J" android:id="@+id/buttonJ"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="K" android:id="@+id/buttonK"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="L" android:id="@+id/buttonL"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="M" android:id="@+id/buttonM"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="N" android:id="@+id/buttonN"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="O" android:id="@+id/buttonO"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="P" android:id="@+id/buttonP"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="Q" android:id="@+id/buttonQ"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="R" android:id="@+id/buttonR"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="S" android:id="@+id/buttonS"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="T" android:id="@+id/buttonT"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="U" android:id="@+id/buttonU"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text=""/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="V" android:id="@+id/buttonV"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="W" android:id="@+id/buttonW"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="X" android:id="@+id/buttonX"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="Y" android:id="@+id/buttonY"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="Z" android:id="@+id/buttonZ"/>
            <Button android:layout_width="50dp" android:layout_height="wrap_content" android:text="" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>